#!/bin/bash

# Read path from user input
read -p "Enter path: " path

# Check if the path is a directory
if [ -d "$path" ]; then
  # List all files in the directory
  echo "List of files in $path:"
  ls -al "$path"
else
  # If the path is not a directory, ask the user to give the file path of a directory
  echo "$path is not a directory."
  read -p "Enter the path of a directory: " new_path
  # Check if the new path is a directory
  if [ -d "$new_path" ]; then
    # List all files in the directory
    echo "List of files in $new_path:"
    ls -al "$new_path"
  else
    echo "$new_path is not a directory. Exiting script."
    exit 1
  fi
fi
